{
    "source": "src",
    "destination": "build",
    "plugins": {
        "metalsmith-layouts": {
            "engine": "handlebars",
            "default": "default.hbs",
            "rename": true
        },
        "metalsmith-open-graph": {
          "siteurl": "https://experiment.fluffel.io",
          "title": "title",
          "description": "subTitle",
          "image": "#og-image"
        },
        "metalsmith-html-minifier": "*.html",
        "metalsmith-watch": {
          "paths": {
            "${source}/**/*": true,
            "layouts/**/*": "**/*"
          },
          "livereload": true
        }
    }
}
